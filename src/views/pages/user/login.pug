extends ../../layout

block content
  .container.mt-5
    .row
      .col-md-6.offset-md-3
        .card
          .card-header
            h2= t('title_login')
          .card-body
            form#loginUserform(action="/login" method="POST") 
              if error_msg.length
                #errorAlert.alert.alert-danger
                  | #{error_msg}
              .mb-3
                label.form-label(for="username")= t('form.username')
                input.form-control(type="text" name="usernameLogin" id="usernameLogin" placeholder="username123" required)
              .mb-3
                label.form-label(for="password")= t('form.password')
                input.form-control(type="password" name="password" id="password" placeholder="Abcd@1234" required)
              button.btn.btn-success.fw-bold.w-100(type="submit")= t('action.login')
          .card-footer
            p #{t('message.or')}
            .d-flex.justify-content-between
              button.btn.btn-outline-primary(type="button") #{t('action.loginByGoogle')}
            p.mt-3
              | #{t('message.notAccount')} 
              a(href="/register") #{t('message.registerHere')}
  block scripts
    script(src="/js/user.js")
