doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= pageTitle
    link(rel="stylesheet" href="/stylesheets/bootstrap-5.1.3-dist/css/bootstrap.min.css")
    script(src="/stylesheets/bootstrap-5.1.3-dist/js/bootstrap.bundle.min.js")
    script(src="/js/jquery-3.7.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/flatpickr")
    link(rel="stylesheet" href="/stylesheets/css/style.css")
  body
    .d-flex.justify-content-between.align-items-center.pt-3.px-5
      h5.mb-0 #{t('title_Logo')}
      //- Nhóm các liên kết ở góc phải
      .d-flex.align-items-center
        a.text-decoration-none.text-light.pe-3(href='/login') #{t('action.login')}
        a.text-decoration-none.text-light.pe-2(href='?lng=en') #{t('option.english')} 
        a.text-decoration-none.text-light | 
        a.text-decoration-none.text-light.ps-2(href='?lng=vi') #{t('option.vietnamese')}

    block content
    